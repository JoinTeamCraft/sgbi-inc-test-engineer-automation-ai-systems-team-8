# Environment Configuration
# Set these variables to customize test execution

# Browser settings
BROWSER=chrome
HEADLESS=false

# Timeout settings  
IMPLICIT_WAIT=10
EXPLICIT_WAIT=20
PAGE_LOAD_TIMEOUT=30

# Test environment
BASE_URL=https://opensource-demo.orangehrmlive.com

# Credentials (for demo purposes only)
VALID_USERNAME=Admin
VALID_PASSWORD=admin123

# Screenshot settings
SCREENSHOT_ON_FAILURE=true
CLEANUP_OLD_SCREENSHOTS=true
MAX_SCREENSHOT_AGE_DAYS=7

# Logging
LOG_LEVEL=INFO
ENABLE_BROWSER_LOGS=true

# Parallel execution
PARALLEL_TESTS=1
